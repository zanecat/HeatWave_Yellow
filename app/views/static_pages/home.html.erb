<% provide(:title, 'Home') %>
<div class="center hero-unit">
  <h1>Welcome to the HeatWave</h1>
  <h2>
    This is the HeatWave page for the
    <a href="https://www.kildonan.org.au/">Kildonan</a>
  </h2>
  <% if admin_signed_in? %>
    <%= link_to "Visit my page", current_admin, class: "btn btn-primary btn-primary" %>
  <% elsif signed_in %>
    <%= link_to "Visit my page", current_user, class: "btn btn-primary btn-primary" %>
  <%else %>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-primary btn-primary" %>
  <% end -%>
</div>

